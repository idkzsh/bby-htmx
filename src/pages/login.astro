export const partial = true;
---

<div class="flex flex-col w-full items-center gap-4">
  <h1>Vendor Sign-on</h1>
  <div class="flex flex-col w-full items-center gap-2">
    <form
      action="/api/auth/signin"
      method="post"
      class="flex justify-evenly w-72 h-auto p-4 border rounded-md flex-col relative shadow-lg gap-2 bg-headerbg"
    >
      <label for="email" for="email">Email</label>
      <input
        type="email"
        name="email"
        id="email"
        class="bg-gray-50 w-full py-2 px-4 pr-8 rounded-md text-black"
        required
      />
      <label for="password">Password</label>
      <input
        type="password"
        name="password"
        id="password"
        class="bg-gray-50 w-full py-2 px-4 pr-8 rounded-md text-black"
        required
      />
      <button type="submit" class="btn">Login</button>
    </form>
    <span class="text-xs w-full text-center"
      >Don't have an account? <span
        hx-get="/register"
        hx-swap="innerHTML transition:true"
        hx-target="#main"
        class="cursor-pointer"
        ><u>Register</u></span
      ></span
    >
  </div>
</div>
